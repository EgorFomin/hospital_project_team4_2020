@model HospitalProjectTeam4.Models.ForumPost
@{
    ViewBag.Title = "DeleteConfirm";
}
<div class="container">
    <div class="alert alert-secondary" role="alert">
        <h4 class="alert-heading">Delete @Model.PostingTitle</h4>
        <p>Are you sure you want to delete this forum post?</p>
        <form method="POST" action="/ForumPost/Delete/@Model.PostID">
            <div class="input">
                <input class="btn btn-danger" type="submit" value="Confirm" />
            </div>
        </form>
        <div class="navbar">
            <a href="/ForumPost/Show/@Model.PostID">Cancel</a>
        </div>
    </div>
</div>

